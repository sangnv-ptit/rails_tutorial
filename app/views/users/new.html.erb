<% provide :title, t("users.signup") %>
<h1>Sign up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_tag :users do %>
      <%= render "shared/error_messages", user: @user %>

      <%= label_tag :name %>
      <%= text_field_tag "user[name]", nil, class: "form-control" %>

      <%= label_tag :email %>
      <%= email_field_tag "user[email]", nil, class: "form-control" %>

      <%= label_tag :password %>
      <%= password_field_tag "user[password]", nil, class: "form-control" %>

      <%= label_tag :password_confirmation, t("signup_page.confirmation") %>
      <%= password_field_tag "user[password_confirmation]", nil,
        class: "form-control" %>

      <%= submit_tag t("signup_page.create"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
