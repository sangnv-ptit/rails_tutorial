<% if user.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      <%= t "message.content" %>
      <%= pluralize user.errors.count, t("layouts.application.error") %>.
    </div>
    <ul>
    <% user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
