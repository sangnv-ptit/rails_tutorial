<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("static_pages.sample_app"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("static_pages.home"), root_path %></li>
        <li><%= link_to t("static_pages.help"), help_path %></li>
        <% if logged_in? %>
          <li><%= link_to t("layouts.header.users"), "#" %></li>
          <li class="dropdown">
            <%= link_to "#", class: "dropdown-toggle",
              data: {toggle: "dropdown"} do %>
              <%= t "header.account" %>
              <%= content_tag "b", "", class: "caret" %>
            <% end %>
            <ul class="dropdown-menu">
              <li><%= link_to t("layouts.header.profile"), current_user %></li>
              <li><%= link_to t("layouts.header.settings"), "#" %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("static_pages.logout"), logout_path,
                  method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("static_pages.login"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
