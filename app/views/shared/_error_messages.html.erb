<% if object.errors.any? %>
  <div class="error-explanation">
    <div class="alert alert-danger">
      <%= t "message.content" %>
      <%= pluralize object.errors.count, t("layouts.application.error") %>.
    </div>
    <ul>
    <% object.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
