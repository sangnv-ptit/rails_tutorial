<%= form_for object do |f| %>
  <%= render "shared/error_messages", object: f.object %>

  <%= f.fields_for :profile do |profile_form| %>
    <%= profile_form.label :name %>
    <%= profile_form.text_field :name, class: "form-control" %>

    <%= profile_form.label :sex %>
    <% @genders.each do |key| %>
      <%= label_tag t "gender.#{key}" %>
      <%= profile_form.radio_button :sex, key %>
    <% end %>

    <%= profile_form.label :dob %>
    <%= profile_form.date_field :dob, class: "form-control" %>
  <% end %>

  <%= f.label :email %>
  <%= f.email_field :email, class: "form-control" %>

  <%= f.label :password %>
  <%= f.password_field :password, class: "form-control" %>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation, class: "form-control" %>

  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>
