<% provide :title, t("edit_page.title") %>
<% provide :button_text, t("edit_page.button") %>
<h1><%= t "edit_page.header" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render "form", object: @user %>
    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <%= link_to  t("edit_page.change"), "http://gravatar.com/emails",
        target: "_blank" %>
    </div>
  </div>
</div>
