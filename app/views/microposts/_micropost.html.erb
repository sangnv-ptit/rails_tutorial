<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: 50), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content">
    <%= micropost.content %>
    <%= image_tag micropost.picture.url if micropost.picture? %>
  </span>
  <span class="timestamp">
    <%= t "micropost.post" %>
    <%= time_ago_in_words micropost.created_at %>
    <abbr class="timeago" title="<%= micropost.created_at.getutc.iso8601 %>">
      <%= micropost.created_at.to_s %>
    </abbr>
    <%= t "micropost.ago" %>
    <% if micropost.user.current_user? current_user %>
      <%= link_to t("index_page.delete"), micropost, method: :delete,
        data: {confirm: t("message.confirm")} %>
    <% end %>
  </span>
</li>
